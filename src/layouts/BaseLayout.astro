---
import Footer from "@components/globals/Footer.astro";
import Head from "@components/globals/Head.astro";
import Navbar from "@components/globals/Navbar.astro";

import { siteConfig, menuLinks } from "@site.config"

import "@styles/global.css"
import { Font } from 'astro:assets';

interface Props {
	title?: string;
	description?: string;
	keywords?: string[];
}

const {
	title = siteConfig.title,
	description = siteConfig.description,
	keywords = [],
} = Astro.props;
---

<Font cssVariable='--main-font' preload />

<html>
    <Head title={title} keywords={keywords} description={description}/>

    <body>
        <Navbar
            title={siteConfig.title}
            navbarLinks={menuLinks}
        >
        </Navbar>
        <main class="flex flex-col flex-grow">
            <slot />
        </main>
        <Footer />
    </body>
</html>
