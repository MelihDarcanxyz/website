---
import { Icon } from "astro-icon/components";

interface Props {
	title: string;
	Logo?: ImageMetadata;
  logoFill: string;
	iconName?: string;
  iconFill?: string;
}

const { title, Logo, logoFill="fill-accent", iconName, iconFill="text-accent" } = Astro.props;
---

<div class="flex-grow hero">
  <div class="text-center hero-content">
    <div>
      {typeof iconName === "string" ? <Icon name={iconName} class:list={["inline-block p-5 md:p-10 w-30 sm:w-75 h-30 sm:h-75", iconFill]},  /> : <Logo class:list={["inline-block p-5 stroke-1 stroke-base-300 md:p-10 w-30 sm:w-75 h-30 sm:h-75", logoFill]} />}
      
      <h1 class="text-2xl font-bold md:text-3xl lg:text-4xl">{title}</h1>
      <slot />
    </div>
  </div>
</div>
