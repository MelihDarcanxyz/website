---
import { socialLinks } from "@site.config";
import { Icon } from "astro-icon/components";
---
<div class="grid grid-cols-3 sm:flex sm:flex-row gap-6 justify-center sm:gap-8 md:gap-12">
        {
          socialLinks.map((socialLink) => {
            return (
              <a
                href={socialLink.path}
                target="_blank"
                class="group"
              >
                {socialLink.icon && (
                  <Icon name={socialLink.icon} class="mx-auto mb-2 w-6 h-6 duration-200 md:w-8 md:h-8 group-hover:text-accent" />
                )}
                {socialLink.title}
              </a>
            );
          })
        }
      </div>